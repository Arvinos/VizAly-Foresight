{
	"project-home": "",
	"wflow-path": "hacc_Travis_test_",
	
	"input": 
	{
		"filetype": "HACC",
		"filename": "../testing/data/m000.full.mpicosmo.50",
		"scalars": ["x", "y", "z", "vx", "vy", "vz"]
	},

	"data-reduction": 
	{
		"cbench-compressors" : 
		[
			{
				"name": "BLOSC",
				"output-prefix" : "BLOSC_HACC_"
			},

			{
				"name": "SZ",
				"output-prefix" : "SZ_HACC_pos_vel_",
				"compressor-params" :
				[
					{
						"scalar" : ["x", "y", "z"],
						"abs" : 1E-3
					},

					{
						"scalar" : ["vx", "vy", "vz"],
						"pw_rel" : 1E-2
					}
				]
			},

			{
				"name": "fpzip",
				"bits" : 24,
				"output-prefix" : "fpzip_24_"
			},


			{
				"name": "zfp",
				"output-prefix" : "zfp_abs_.01_",
				"abs" : 1E-2
			}
		],

		"bench-metrics": 
		[
			{
				"name" : "absolute_error",
				"histogram" : ["x", "y", "z"]
			},

			{
				"name" : "relative_error"
			},

			{
				"name" : "mse"
			},

			{
				"name" : "psnr"
			}
		],

		"cbench-output" :
		{
			"output-decompressed": true,
			"output-decompressed-location" : "HACC_Travis_",
			
			"log-file" : "runlog_HACC_Travis_",
			"metrics-file" : "metrics_HACC_Travis_"
		},

		"name" : "cbench",
		"path" : "mpirun $foresight-home$build/CBench",
		"evn_path": "scripts/VizAly-CBench.bash.darwin",
		"configuration": 
		{
			"partition": "general",
			"nodes": 1,
			"ntasks-per-node": 16
		},

		"output-files": []
	}
}

